{{range .Broadcasts}}
	func (impl *{{$ImplementationName}}) ListenFor{{exportNameOf .Name}} {{"(ctx context.Context " -}}) (chan any, error) {

        conn, err := dbus.ConnectSessionBus()
        if err != nil {
            return nil, err
        }

        err = conn.AddMatchSignal(impl.broadcastMatchOptions...)
        if err != nil {
            return nil, err
        }

        signalsChannel := make(chan *dbus.Signal)
        conn.Signal(signalsChannel)

        var b interface{}
        err = conn.Object(impl.destination, dbus.ObjectPath(impl.path)).
            Call("{{$fqInterfaceName}}.subscribeFor{{.Name}}Selective", 0).
            Store(&b)
        if err != nil {
            return nil, err
        }

        returnChan := make(chan any)
        go func() {
            for {
                sig := <-signalsChannel
                if strings.Contains(sig.Name, "{{.Name}}") {
                    returnChan <- sig
                }
            }
        }()

        return returnChan, nil

	}
